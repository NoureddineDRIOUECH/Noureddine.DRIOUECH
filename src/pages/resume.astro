            <li>Astro</li>
            <li>Next.js</li>
            <li>HTML5 & CSS3</li>
            <li>Tailwind CSS</li>
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2">Backend</h3>
          <ul class="list-disc list-inside">
            <li>Node.js</li>
            <li>Express.js</li>
            <li>REST APIs</li>
            <li>GraphQL</li>
          </ul>
        </div>
        <div>
