---
import "@/styles/global.css";
import { ScrollProgress } from "@/components/ui/scroll-progress";
import StarsCanvas from "@/components/ui/StarBackground";
import { DockBar } from "@/components/DockBar";
import { Toaster } from "@/components/ui/sonner";
import SplashCursor from "../ui/Animations/SplashCursor/SplashCursor";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Noureddine DRIOUECH | Software Engineerr</title>
    <meta
      name="description"
      content="Portfolio of Noureddine DRIOUECH, a Software Engineer specializing in building modern, full-stack web applications and scalable SaaS solutions. Let's connect and build something amazing."
    />
    <meta
      name="keywords"
      content="Noureddine DRIOUECH, Software Engineer, Web Developer, Frontend Developer, Full-Stack Developer, React Developer, Astro Developer, SaaS, Portfolio, Casablanca"
    />
    <style>
      html,
      body {
        text-align: center;
        scroll-behavior: smooth;
      }
    </style>
    <link rel="preload" href="/_astro/react.DF5ADMvu.js" as="script" />
    <link rel="preload" href="/_astro/three.B_VjDKY3.js" as="script" />
    <link rel="modulepreload" href="/_astro/utils.CBfrqCZ4.js" />
    <meta name="author" content="Noureddine DRIOUECH" />
    <link rel="canonical" href="https://noureddinedriouech.vercel.app/" />
    <link rel="icon" type="image/svg+xml" href="/Noureddine%20DRIOUECH.jpg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://cdn.simpleicons.org" />
    <link
      rel="preload"
      href="/_astro/_slug_.BDH7c58n.css"
      as="style"
      onload="this.rel='stylesheet'"
    />
    <noscript
      ><link rel="stylesheet" href="/_astro/_slug_.BDH7c58n.css" /></noscript
    >

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://noureddinedriouech.vercel.app/" />
    <meta
      property="og:title"
      content="Noureddine DRIOUECH | Software Engineer & Web Developer"
    />
    <meta
      property="og:description"
      content="Portfolio of Noureddine DRIOUECH, a Software Engineer specializing in building modern, full-stack web applications and scalable SaaS solutions."
    />
    <meta
      property="og:image"
      content="https://noureddinedriouech.vercel.app/NoureddineDRIOUECH.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content="https://noureddinedriouech.vercel.app/"
    />
    <meta
      property="twitter:title"
      content="Noureddine DRIOUECH | Software Engineer & Web Developer"
    />
    <meta
      property="twitter:description"
      content="Portfolio of Noureddine DRIOUECH, a Software Engineer specializing in building modern, full-stack web applications and scalable SaaS solutions."
    />
    <meta
      property="twitter:image"
      content="https://noureddinedriouech.vercel.app/NoureddineDRIOUECH.jpg"
    />

    <!-- Structured Data for SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Noureddine DRIOUECH",
        "url": "https://noureddinedriouech.vercel.app/",
        "image": "https://noureddinedriouech.vercel.app/NoureddineDRIOUECH.jpg",
        "sameAs": [
          "https://www.linkedin.com/in/noureddinedriouech/",
          "https://github.com/NoureddineDRIOUECH"
        ],
        "jobTitle": "Software Engineer",
        "worksFor": {
          "@type": "Organization",
          "name": "Freelance"
        },
        "description": "Software Engineer specializing in building modern, full-stack web applications and scalable SaaS solutions using technologies like React, Astro, and Node.js.",
        "alumniOf": {
          "@type": "CollegeOrUniversity",
          "name": "ENSIASD"
        },
        "knowsAbout": [
          "Software Development",
          "Frontend Development",
          "Full-Stack Development",
          "SaaS Architecture",
          "React",
          "Astro",
          "JavaScript",
          "TypeScript",
          "Node.js",
          "Tailwind CSS",
          "SEO"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Casablanca",
          "addressCountry": "MA"
        }
      }
    </script>
    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
  </head>
  <body>
    <ScrollProgress client:load />
    <SplashCursor client:idle />
    <StarsCanvas client:idle />

    <slot />
    <DockBar client:load />
    <Toaster client:idle />
    <SpeedInsights />
  </body>
</html>
